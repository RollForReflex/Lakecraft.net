@charset "UTF-8";

@import 'lakecraft/variables';

@import 'lakecraft-components';

@font-face
    font-family: Cubano
    font-style: normal
    src: url('../assets/cubano-regular-webfont.ttf')

#top
    height: 50px
    
.header
    height: 50px
    border: 1px solid #CCC
    margin: 0px auto
    width: 100%

.header-container
    top: 0px
    background: #3386aa
    z-index: 9999
    width: 100%
    height: 60px
    position: fixed
    
h3
    font-family: Cubano
    
h5
    font-family: 'Raleway'
    font-weight: 600

#logo
    float: left
    margin-left: 20px

.top-bar
    background: #3386aa
    text-align: center
    
.right
    display: inline-block 
    
#navContent ul
    padding: 0
    margin: 0
    
#share-btns
    padding-top: 1%
    
body
    font-family: 'Raleway', sans-serif 
    color: #003231
    
.nav-list li a
    color: #d1f6ff
    &:hover
        color: #96ce8e 
    
a
    color: #60bbd1
    &:hover
        color: #96ce8e
    
.nav-item a
    font-weight: 600
    
.contain-to-grid
    background: #3386aa
    
.top-bar-section ul li
    display: inline-block
    list-style: none
    margin-left: 65px; 
    
.section
    padding-left: 7%
    padding-right: 7%
    
#live-link
    font-size: 24px
    color: #3386aa 
    &:hover
        color: #d1f6ff

.drop-list
    list-style-image: url('../assets/fav16.svg')

.drop-list p
    margin-bottom: .85em

#slogan
    font-family: 'Raleway', sans-serif
    font-weight: 400
    font-size: large
    text-align: center

#about 
    padding-top: 8%
    padding-bottom: 4%
    background: #96CE8E
    
#installation
    padding-top: 4%
    padding-bottom: 4%
    
#contact
    padding-top: 4%
    padding-bottom: 4%
    
#team
    padding-top: 4%
    padding-bottom: 4%
    background: #d1f6ff
    
#edu-use
    padding-top: 4%
    padding-bottom: 4%
    background: #efefef

#contact
    background: #c87a50

#logo-header
    padding-top: 3%
    padding-bottom: 3%
    margin-top: 5%
    
.footer-imgs img
    padding-right: 5%
    
.team-row
    padding-bottom: 4%
    
.portrait
    float: left
    margin: 0em 1em 0.5em 0em

.title
    margin-top: -1%

.full-width 
    width: 100%
    margin-left: auto
    margin-right: auto
    max-width: initial

/** Removes black background on menu bar **/
.top-bar-section ul 
    background: none;
    text-transform: uppercase;

/** Removes black background on menu item **/
.top-bar-section li a:not(.button)
    background: none;
    
section.top-bar-section 
    float: left;
    left: 45% !important;
    position: relative;

section.top-bar-section ul.right 
    position: relative;
    right: 50%;

.top-bar-section li a:not(.button):hover
    background: none;
    color: #96ce8e 
    
.top-bar-section li a:not(.button)
    color: #d1f6ff
    
.top-bar.expanded .toggle-topbar a
    color: #d1f6ff
    
.top-bar.expanded .toggle-topbar a:hover
    color: #96ce8e
    
.top-bar .toggle-topbar.menu-icon a
    text-indent: -70px;

.top-bar.expanded .title-area
    background: #3386aa
    
.top-bar.expanded
    background: #3386aa
    
.top-bar.expanded ul li
    display: block